# Planogram Vision Demo - Environment Configuration
# Copy this file to .env and modify the values as needed for your deployment

# Directory configurations
PLANOGRAM_CONFIG_DIR=config/planograms
PLANOGRAM_IMAGES_DIR=config/images
PLANOGRAM_WEIGHTS_DIR=weights
PLANOGRAM_TEMP_DIR=/tmp

# Model configuration
PLANOGRAM_MODEL_WEIGHTS=pick-instance-seg-v11-1.2.pt

# Streamlit configuration (if using external deployment)
STREAMLIT_PORT=8501
STREAMLIT_HOST=0.0.0.0

# Security settings (for production deployments)
STREAMLIT_ENABLE_CORS=false
STREAMLIT_ENABLE_XSRF_PROTECTION=false